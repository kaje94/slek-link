{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.23.3",
    "templ@0.2.793",
    "air@1.61.1",
    "bun@1.1.34",
    "golangci-lint@1.58.2",
    "go-task@latest",
    "rabbitmq-server@latest",
    "valkey@latest"
  ],
  "include": ["github:jetify-com/devbox-plugins?dir=rabbitmq"],
  "env": {
    "NIX_HARDENING_ENABLE": ""
  },
  "env_from": ".env",
  "shell": {
    "init_hook": ["devbox run init"],
    "scripts": {
      "init": [
        "bun install --cwd ./apps/webapp/static",
        "bun add --global @asyncapi/generator@2.6.0",
        "templ generate -lazy",
        "task devbox-services:initial-build",
        "task --list-all"
      ]
    }
  }
}
