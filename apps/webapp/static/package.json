{
  "name": "slek-link-webapp",
  "version": "1.0.0",
  "scripts": {
    "build-js": "bun build ./scripts.js --outdir ./public/dist --minify",
    "build-css": "tailwindcss -i ./app.css -o ./public/dist/styles.css --minify",
    "build": "bun run build-js && bun run build-css",
    "dev-js": "bun build ./scripts.js --outdir ./public/dist",
    "dev-css": "tailwindcss -i ./app.css -o ./public/dist/styles.css",
    "dev": "bun run dev-js && bun run dev-css",
    "watch-js": "bun build ./scripts.js --outdir ./public/dist --watch",
    "watch-css": "tailwindcss -i ./app.css -o ./public/dist/styles.css --watch",
    "watch": "concurrently 'bun run watch-js' 'bun run watch-css'"
  },
  "dependencies": {
    "tailwindcss": "4.0.8",
    "daisyui": "5.0.0",
    "@starfederation/datastar": "1.0.0-beta.8"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
