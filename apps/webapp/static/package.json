{
  "name": "slek-link-webapp",
  "version": "1.0.0",
  "scripts": {
    "rename-dist-files": "bun run rename-dist-files.ts",
    "build-js": "bun build ./scripts.ts --outdir ./public/dist --minify",
    "build-temp-css": "tailwindcss -i ./app.css -o ./public/dist/temp/styles.css --minify",
    "build-purge-css": "bunx purgecss --css public/dist/temp/styles.css --content ../internal/**/*.templ --output public/dist -s datastar-swapping -s datastar-settling",
    "build": "rimraf ./public/dist && bun run build-js && bun run build-temp-css && bun run build-purge-css && bun run rename-dist-files ./public/dist && rimraf ./public/dist/temp",
    "dev-js": "bun build ./scripts.ts --outdir ./public/dist",
    "dev-css": "tailwindcss -i ./app.css -o ./public/dist/styles.css",
    "dev": "bun run dev-js && bun run dev-css",
    "watch-js": "bun build ./scripts.ts --outdir ./public/dist --watch",
    "watch-css": "tailwindcss -i ./app.css -o ./public/dist/styles.css --watch",
    "watch": "concurrently 'bun run watch-js' 'bun run watch-css'"
  },
  "dependencies": {
    "tailwindcss": "4.0.8",
    "daisyui": "5.0.0",
    "@starfederation/datastar": "1.0.0-beta.9",
    "instant.page": "^5.2.0",
    "charts.css": "^1.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@types/node": "^20.0.0",
    "typescript": "^5.8.2",
    "rimraf": "^6.0.1"
  }
}
